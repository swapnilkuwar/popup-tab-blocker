{
  "name": "Popup Tab Blocker",
  "description": "Instantly blocks new tabs and popups opened by selected sites",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["tabs", "storage"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/off.png",
      "32": "icons/off.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "128": "icons/icon128.png"
  }
}
